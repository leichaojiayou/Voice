.list {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  
  display: flex;
  /*border-bottom: 1px solid #eee;*/
}

.list-avatar {
  
  
}

.list-avatar image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  border: 1px solid #eee;
}


.list-side {
  margin-left: 40rpx;
  width: 100%;
  border: 1px solid rgba(0,0,0, 0.50);
  border-radius: 35rpx;
  /*border-top-left-radius: 20%;*/
  padding: 20rpx;
}

.list-title {
  font-size: 14pt;
  margin-bottom: 20rpx;
}

.list-voice {  
    display: flex;
    justify-content: flex-start;
    align-items: center; 
}

.list-voice-box {
    width: 346rpx;
    height: 72rpx;
    background: rgb(80,227,194);
    border-radius: 4pt;
    border: 1rpx solid rgba(4,4,4,0.08);
}

.list-voice-img {

  height: 100%;
  width: 100%;
  padding-left:20rpx; 

  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: 22rpx 34rpx;
  background-position: center left;
  background-origin: content-box;

}

.list-voice-img-shake {
  animation-name: playVoice;
  animation-iteration-count: infinite;
  animation-duration: 1.4s;
}
@keyframes playVoice
{
    0%   {background-image: url('data:image/png;base64,');}
    33%  {background-image: url('data:image/png;base64,');}
    66%  {background-image: url('data:image/png;base64,');}
    100% {background-image: url('data:image/png;base64,');}
}


.list-voice-time {
  margin-left: 30rpx;
  color: rgb(178,178,178);
}

.list-description {
    margin-bottom: 40rpx;
    font-size: 12pt;
    color: rgba(53,53,53,0.9);
    line-height: 1.4em;
}

.add {
  position: fixed;
  bottom: 80rpx;
  right: 60rpx;
}

.add image {
  width: 128rpx;
  height: 128rpx;
}