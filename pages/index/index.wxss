.list {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  
  display: flex;
  border-bottom: 1px solid #eee;
}

.list-avatar {
  
  
}

.list-avatar image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  border: 1px solid #eee;
}


.list-side {
  margin-left: 40rpx;
  width: 100%;
}

.list-title {
  font-size: 14pt;
  margin-bottom: 20rpx;
}

.list-voice {  
    display: flex;
    justify-content: flex-start;
    align-items: center; 
}

.list-voice-img {
    width: 346rpx;
    height: 72rpx;
    background: rgb(80,227,194);
    border-radius: 4pt;
    padding: 18rpx 30rpx;
    box-sizing: border-box;
    border: 1rpx solid rgba(4,4,4,0.08);
}

.list-voice-img image{
  width: 40rpx;
  height: 40rpx;
}

.list-voice-time {
  margin-left: 30rpx;
  color: rgb(178,178,178);
}

.list-description {
    margin-bottom: 40rpx;
    font-size: 12pt;
    color: rgba(53,53,53,0.9);
    line-height: 1.4em;
}

.add {
  position: fixed;
  bottom: 80rpx;
  right: 60rpx;
}

.add image {
  width: 128rpx;
  height: 128rpx;
}