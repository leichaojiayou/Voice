.bottom-box {
    position: absolute;
    width: 100%;
    height: 200rpx;
    bottom: 20%;
    text-align: center;
}

.bottom-btn {
    margin: 0 auto;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border: lawngreen solid thin;
    box-shadow: 2px 2px 2px #aaa;
    background: lawngreen;
}

.bottom-btn-recording {
    opacity: .6;
    box-shadow: 0px 0px 0px #aaa;
}

.bottom-info {
    position: relative;
    top: 40rpx;
    font-size: .8em;
    color: #aaa;
}

.play-box {
    width: 100%;
    height: 200rpx;
    padding: 20rpx;
    border: 1px solid lightgreen;
    box-sizing: border-box;
}

.play-box image {
    width: 80rpx;
    height: 80rpx;
}

.play-box progress {
    position: relative;
    top: 20rpx;
}

.play-box text {
    position: relative;
    top: -60rpx;
    left: 120rpx;
}


.upload-btn {
   margin-top: 40px;
}



