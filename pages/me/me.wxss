/**index.wxss**/
.userinfo {
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-around;
  flex-direction:column;
  background: url('/images/group.png');
  height: 270rpx;
}

.userinfo-basic {
  width: 100%;
  display: flex;
  align-items: center;
}

.userinfo-avatar {
  width: 94rpx;
  height: 94rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 12pt;
  color: white;
}

.userinfo-imaginations {
  font-size: 12pt;
  color: white;
  margin: 20rpx;
}

.list {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: row;
  background-image: url('/images/line.png');
  background-repeat:no-repeat;
  background-position: 8.5%;
}

.list-delete {
  padding-right:  40rpx;
}

.list-delete image{
  width: 56rpx;
  height: 56rpx;
}

.list-title {
  font-size: 16pt;
  margin-bottom: 32rpx;
}

.list-voice {  
    display: flex;
    justify-content: flex-start;
    align-items: center;
    
}


.list-voice-img {
    width: 346rpx;
    height: 72rpx;
    background: rgb(80,227,194);
    border-radius: 4pt;
    padding: 18rpx 30rpx;
    box-sizing: border-box;
    border: 1rpx solid rgba(4,4,4,0.08);
}

.list-voice-img image{
  width: 40rpx;
  height: 40rpx;
}

.list-voice-time {
  margin-left: 30rpx;
  color: rgb(178,178,178);
}

.list-description {
    margin-top: 36rpx;
    font-size: 12pt;
    color: rgb(53,53,53);
}